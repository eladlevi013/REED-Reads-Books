<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#eed1ff"
    android:layout_height="match_parent"
    tools:context=".views.History">

    <TextView
        android:textColor="@color/black"
        android:layout_below="@id/month_sum_tv"
        android:fontFamily="casual"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/sum_tv"
        android:layout_marginTop="0dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The Sum Of The Time "
        android:textSize="18dp"/>

    <TextView
        android:textColor="@color/black"
        android:fontFamily="casual"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/month_sum_tv"
        android:layout_marginTop="0dp"
        android:layout_below="@id/week_sum_tv"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The Sum Of The Month"
        android:textSize="18dp"/>

    <TextView
        android:textColor="@color/black"
        android:fontFamily="casual"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/week_sum_tv"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The Sum Of the Week"
        android:textSize="18dp"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemTextColor="@drawable/selector"
        app:itemIconTint="@drawable/selector"
        app:menu="@menu/menu_navigation"
        android:id="@+id/bottom_navigation"
        app:itemBackground="@color/design_default_color_primary_dark"/>

    <TextView
        android:fontFamily="casual"
        android:textColor="@color/design_default_color_primary_dark"
        android:id="@+id/reading_log_msg_tv"
        android:layout_marginTop="15dp"
        android:layout_below="@id/sum_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="25dp"
        android:text="@string/ul_string_here"
        android:layout_centerHorizontal="true"/>

    <ListView
        android:layout_marginTop="10dp"
        android:id="@+id/ls"
        android:layout_below="@+id/reading_log_msg_tv"
        android:layout_above="@id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>
